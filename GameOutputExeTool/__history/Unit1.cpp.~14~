//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
	TMemoryStream *ms = new TMemoryStream;
	ms->LoadFromFile("ClientData");

	BYTE XorKey = StrToInt(this->Edit2->Text);
	ms->Position = 0xA90;
	ms->WriteBuffer(&XorKey,1);
	ms->WriteBuffer("\x90\x90\x90",3);
	//===================Password Crypto Data==================
	ms->Position = 0xB70;
	char* PasswordAscii = AnsiString(this->Edit1->Text).c_str();
	BYTE Buf[100] = {0};
	for (int i = 0; i < strlen(PasswordAscii); i++)
	{
		Buf[i] = PasswordAscii[i]^ XorKey;
	}
	ms->WriteBuffer(Buf,100);
	//===================Password Crypto Data==================
	/*
	ror eax, 02 = \xC1\xc8\x02
	ror ecx, 02 = \xC1\xc9\x02
	ror edx, 02 = \xC1\xca\x02
	ror ebx, 02 = \xC1\xcb\x02

	scasd = \xAF
	stosb = \xAA
	lodsb = \xAC

	ret = \x5D\xC3
	*/

	BYTE Buf1[240] = {0xC3};
	ms->Position = 0xC03;
	srand(time(0));
	for (int i = 0; i < 239;)
	{
		int Choise = random(11);

		switch (Choise)
		{
			case 0://scasd
				Buf1[i] = 0xAF;
				break;
			case 1://stosb
				Buf1[i] = 0xAA;
				break;
			case 2://lodsb
				Buf1[i] = 0xAC;
				break;
			case 3://ror eax
				Buf1[i+0] = 0xC1;
				Buf1[i+1] = 0xC8;
				Buf1[i+2] = random(10);
				i+=2;
				break;
			case 4://ror ecx
				Buf1[i+0] = 0xC1;
				Buf1[i+1] = 0xC9;
				Buf1[i+2] = random(10);
				i+=2;
				break;
			case 5://ror edx
				Buf1[i+0] = 0xC1;
				Buf1[i+1] = 0xCA;
				Buf1[i+2] = random(10);
				i+=2;
				break;
			case 6://ror ebx
				Buf1[i+0] = 0xC1;
				Buf1[i+1] = 0xCB;
				Buf1[i+2] = random(10);
				i+=2;
				break;
			case 7://jne jmp
				Buf1[i+0] = 0x75;
				Buf1[i+1] = random(256);
				i++;
				break;
			case 8://jle jmp
				Buf1[i+0] = 0x7E;
				Buf1[i+1] = random(256);
				i++;
				break;
			case 9://inc eax ~ edx
				Buf1[i] = 0x40 + random(3);
				break;
			case 10://test ebx,ebx
				Buf1[i+0] = 0x85;
				Buf1[i+1] = 0xDB;
				i++;
				break;
		}
		i++;
	}
	ms->WriteBuffer(&Buf1,240);
	ms->SaveToFile("Client.exe");
	ShowMessage("Éú®aÍê®…!");
}
//---------------------------------------------------------------------------
